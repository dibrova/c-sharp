            <Button Name="button8" Content="Плоскость" Margin="2" />
            <Button Name="button9" Content="Параллелипипед" Margin="2" />
            <Button Name="button10" Content="Куб" Margin="2" />
            <Button Name="button11" Content="Пирамида" Margin="2" />
            <Button Name="button12" Content="Конус" Margin="2" />
            <Button Name="button13" Content="Цилиндр" Margin="2" />
